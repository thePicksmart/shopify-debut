      </div>
      <div class="swiper-btn">{{ section.settings.button_label_2 | escape }}</div>
    </a> 
    <a class="home-swiper-card swiper-card" href="{{ section.settings.button_link_3 }}#{{ section.settings.anchor_3 }}">
      <img class="home-swiper-img" src="{{ section.settings.imagec | img_url: '300x300' }}" />
