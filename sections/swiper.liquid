<div class="wrapper" style="margin-left: 10px">
  <div class="home-scrolls">
    <a class="home-swiper-card swiper-card" href="{{ section.settings.button_link_1 }}#{{ section.settings.anchor_1 }}">
      <img class="home-swiper-img" src="{{ section.settings.image | img_url: '300x300' }}" />
      <div class="swiper-text">
        <div class="home-swiper-title">{{ section.settings.sub_collection_1 | escape }}</div>
        <div class="home-swiper-title home-swiper-subtitle">{{ section.settings.subheading_1 }}</div>
      </div>
      <div class="swiper-btn">{{ section.settings.button_label_1 | escape }}</div>
    </a>
    <a class="home-swiper-card swiper-card" href="{{ section.settings.button_link_2 }}#{{ section.settings.anchor_2 }}">
