<div data-section-id="{{ section.id }}" data-section-type="quotes">
  {% if section.settings.title != blank %}
    <div class="text-center hide-on-mobile">
      <h2 class="dark-text testimonial-header">{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="quotes-wrapper">
      <div class="quotes-slider" id="Quotes-{{ section.id }}" data-count="{{ section.blocks.size }}">
        {% for block in section.blocks %}
          <div class="quotes-slide--{{ block.id }}" {{ block.shopify_attributes }} style="padding: 13px 0;">
            <div class="testimonial-item">
              <div class="text-center show-on-mobile">
                <h2 class="dark-text testimonial-header">{{ section.settings.title | escape }}</h2>
              </div>
              <blockquote class="quotes-slider__text text-center">
                {% if block.settings.quote != blank %}
                  <div class="rte-setting">{{ block.settings.quote }}</div>
                {% endif %}
                <div class="rte-setting"><img class="testimonial-grade" src="https://storage.googleapis.com/picksmart-img-au/assets/home-gra.png" /></div>
                <div class="testimonial-items"> 
                  {% if block.settings.job != blank %}
                    <span>
                      <img class="testimonial-item-icon" style="display: inline;" src="https://storage.googleapis.com/picksmart-img-au/assets/home-client-job.png" />
                      <div style="display: inline">{{ block.settings.job | escape }}</div>
                    </span>
                  {% endif %}
                  {% if block.settings.author != blank %}
                    <span>
                      <img class="testimonial-item-icon" style="display: inline;" src="https://storage.googleapis.com/picksmart-img-au/assets/home-client-name.png" />
                      <div style="display: inline">{{ block.settings.author | escape }}</div>
                    </span>
                  {% endif %}
                  {% if block.settings.location != blank %}
                    <span>
                      <img class="testimonial-item-icon" style="display: inline;" src="https://storage.googleapis.com/picksmart-img-au/assets/home-client-location.png" />
                      <div style="display: inline">{{ block.settings.location | escape }}</div>
                    </span>
                  {% endif %}
                </div>
              </blockquote>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}

  {% if section.blocks.size == 0 %}
    {% include 'no-blocks' %}
  {% endif %}
</div>

<script>
  
  $(document).ready(function() {
    $('#shopify-section-1522392888145').addClass('testimonial-container')
    
    let checkSlick = setInterval(function () {
      if($('.quotes-wrapper').length) {

        $('.quotes-wrapper .slick-prev').html("<img src='https://storage.googleapis.com/picksmart-img-au/assets/slider-arrow-left.png'>");
        $('.quotes-wrapper .slick-next').html("<img src='https://storage.googleapis.com/picksmart-img-au/assets/slider-arrow-right.png'>");
      }

      if($('.quotes-wrapper').length) {
        clearInterval(checkSlick)
      }
    }, 100)
  })
  
</script>
  


