<div class="rte collection-wrapper">
  {{ page.content }} 

  {% include 'subcollection-electronics-lights-on' %}
  
  <div id="stay-powered" class="anchor-placeholder"></div>
  <div class="collection-section-header">STAY POWERED</div>
  <div class="bedroom-section-container">
    <img style="margin-bottom: -7px;" src="https://storage.googleapis.com/picksmart-img-au/collection-page/electronics/img-2.png"/>
    <div class="electronics-section-text hide-on-mobile">Always on the move? Here is a collection just for you. Ranging from ultra slim 4000mAh to powerful 10000mAh power banks, thepicksmart’s ALWAYS POWERED collection will let you stay fully charged 24/7.</div>
    <div class="electronics-section-text-mobile show-on-mobile">Always on the move? Here is a collection just for you. Ranging from ultra slim 4000mAh to powerful 10000mAh power banks, thepicksmart’s ALWAYS POWERED collection will let you stay fully charged 24/7.</div>
  </div>
  <div class="clothing-feature" style="background-color: #fff4bc;">
    <div style="border-radius: 12px;
  				background-color: #ffffff;
  				box-shadow: 0 5px 9px 0 rgba(0, 0, 0, 0.23);
                position: relative;">
      <img class="clothing-feature-img electronics-feature-img" src="https://storage.googleapis.com/picksmart-img-au/collection-page/electronics/item-4000-power-bank.png" />
      {% for product in collections.electronics-acc.products %}
      {% if product.tags contains "staypoweredfeature" %}
        <div class="kitchen-item-text-2 clothing-item-text-1">
          <div class="product__title" style="width: 100%">
            <div class="collection-feature-product-title">{{ product.title }}</div>
          </div>
          <div class="product__prices">
            {% if product.compare_at_price > product.price %}

            <span class="product__price--on-sale" >
              {% if product.price_varies %}
              {% assign sale_price = product.price | money %}
              {{ 'products.product.on_sale_from_html' | t: price: sale_price }}
              {% else %}
              <strong class="visually-hidden">{{ 'products.product.sale_price' | t }}</strong>
              <span style="color: #333; font-size: 16px; font-family: helvetica;">{{ product.price | money }}</span>

              {% endif %}
            </span>

            {% else %}
            <span class="product__price">
              {% if product.price_varies %}
              {% assign price = product.price | money %}
              {{ 'products.product.from_text_html' | t: price: price }}
              {% else %}
              <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
              {{ product.price | money }}
              {% endif %}
            </span>

            {% endif %}

            {% if product.compare_at_price > product.price %}
            <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
            <span class="product-single__price--compare" style="font-size:12px; text-decoration: line-through;">Brand Price {{ product.compare_at_price | money }}</span>
            {% endif %}

            {% if on_sale %}
            <!--       <span class="badge badge--sale"><span>{{ 'products.product.on_sale' | t }}</span></span> -->
            {% endif %}

            {% comment %}
            {% if sold_out %}
            <span class="badge badge--sold-out"><span>{{ 'products.product.sold_out' | t }}</span></span>
            {% endif %}
            {% endcomment %}

            {% if sold_out %}
            <strong class="sold-out-text">{{ 'products.product.sold_out' | t }}</strong>
            {% endif %}

          </div>
          <a href="https://thepicksmart.com/collections/electronics-acc/products/4000mah-power-bank"
             style="border-radius: 2px;
                    background-color: #f5f3ef;
                    border: solid 1px #aca281;
                    padding: 10px;
                    display: block">
            <div style="line-height: normal;
                        letter-spacing: 0.6px;
                        text-align: center;
                        color: #aca281;">SHOP NOW</div>
          </a>
        </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
  
