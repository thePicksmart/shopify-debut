<script>
  $(document).ready(function() {
    $('#mc-embedded-subscribe-form').submit(function() {
      var url = $(this).prop('action').replace('/post?', '/post-json?').concat('&c=?');
      $.ajax({
        type: "GET", // GET & url for json slightly different
        url: url,
        data: $('#mc-embedded-subscribe-form').serialize(),
        dataType: "json",
        error: function(err) {
//           console.log("Could not connect to the registration server.", err); 
        },
        success: function(data) {
//           console.log('ajax return data', data);
          var targetString = data.msg;
          var subString = 'already subscribed';
          if(data.result == 'success' || targetString.indexOf(subString) !== -1) {
            $('.mc-field-group-custom').hide(700);
          };
        }
      });
      return false;
    });
  });
</script>